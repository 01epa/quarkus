<?xml version="1.0" encoding="UTF-8"?>

<Configuration verbose="false" status="warn" packages="org.infinispan.util.logging.log4j">

    <Appenders>
        <File name="FileAppender" fileName="${sys:java.io.tmpdir}/protean/shamrock.log" append="false">
            <ThresholdFilter level="trace"/>
            <PatternLayout pattern="%d %-5p [%c] (%t:%x) %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!--<Logger name="org.hibernate" level="error" />-->
        <!--<Logger name="org.infinispan.protean" level="error" />-->
        <!--<Logger name="org.jboss.shamrock.example.test" level="error" />-->

        <Logger name="org.hibernate" level="trace" />
        <Logger name="org.infinispan.protean" level="trace" />
        <Logger name="org.jboss.shamrock.example.test" level="trace" />

        <Root level="info">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>

</Configuration>